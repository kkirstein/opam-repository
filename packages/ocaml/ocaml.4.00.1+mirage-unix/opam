opam-version: "1.3"
descr: """
Mirage compiler for unix
"""
maintainer: "contact@ocamlpro.com"
depends: [
  "base-unix"
  "base-threads"
  "base-ocamlbuild"
  "base-bigarray"
  "lwt"
  "ocamlfind"
]
flags: compiler
setenv: [
  [MIRAGE_OS = "unix"]
  [MIRAGE_NET = "direct"]
]
build: [
  ["./configure" "-prefix" prefix]
  [make "world"]
  [make "world.opt"]
  [make "install"]
]
substs: "ocaml.config"
